{
  "version": 2,
  "name": "clip.yt",
  "alias": "clipp.li",
  "builds": [{ "src": "next.config.js", "use": "@now/next" }, { "src": "api/**/*.js", "use": "@now/node@canary" }],
  "routes": [
    { "src": "/clip", "methods": ["POST"], "dest": "api/clip.js" },
    { "src": "/.+", "methods": ["GET"], "dest": "api/redirect.js" }
  ],
  "env": {
    "MONGODB_URI": "@mongodb-uri"
  }
}
